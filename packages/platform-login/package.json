{
  "name": "@forgerock/platform-login",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "yarn lint:js",
    "build": "vue-cli-service build",
    "dev": "vue-cli-service serve",
    "docker:build": "config/scripts/docker:build.sh",
    "docker:run": "config/scripts/docker:run.sh",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "vue-cli-service lint",
    "lint:style": "vue-cli-service lint:style '**/*.vue' '**/*.scss'",
    "test:e2e": "vue-cli-service test:e2e --mode e2e",
    "unit": "jest --no-cache",
    "coverage": "jest --verbose --coverage --noStackTrace --no-cache",
    "find-copyright-problems": "echo 'Listing all files which do not contain a valid copywright header for this year - some files do not qualify \n' && cd src && git grep -L --word-regexp \"Copyright (c) $(date +\"%Y\")\""
  },
  "dependencies": {
    "@forgerock/javascript-sdk": "2.0.0",
    "@forgerock/platform-shared": "1.0.0",
    "babel-plugin-require-context-hook": "1.0.0",
    "bootstrap": "4.3.1",
    "bootstrap-vue": "2.13.0",
    "core-js": "3.1.4",
    "lodash": "4.17.19",
    "qrcode-generator": "1.4.4",
    "regenerator-runtime": "0.13.3",
    "vee-validate": "3.2.2",
    "vue": "2.6.11",
    "vue-i18n": "8.0.0",
    "vue-js-toggle-button": "1.2.3",
    "vue-notification": "1.3.16",
    "vue-router": "3.0.7",
    "vue-spinner": "1.0.3",
    "whatwg-fetch": "3.2.0"
  },
  "devDependencies": {
    "@ascendancyy/vue-cli-plugin-stylelint": "1.1.2",
    "@vue/cli-plugin-babel": "3.8.0",
    "@vue/cli-plugin-e2e-cypress": "4.3.1",
    "@vue/cli-plugin-eslint": "4.3.1",
    "@vue/cli-plugin-unit-jest": "3.11.0",
    "@vue/cli-service": "4.3.1",
    "@vue/eslint-config-airbnb": "4.0.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.9.0",
    "copy-webpack-plugin": "5.0.3",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "5.0.0",
    "jest": "24.9.0",
    "jest-html-reporters": "1.2.0",
    "jest-serializer-vue": "2.0.2",
    "lint-staged": "8.1.5",
    "node-sass": "4.12.0",
    "sass-loader": "8.0.2",
    "style-resources-loader": "1.2.1",
    "stylelint": "11.1.1",
    "stylelint-config-standard": "19.0.0",
    "vue-cli-plugin-i18n": "0.6.0",
    "vue-jest": "3.0.5",
    "vue-template-compiler": "2.6.11"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "plugin:cypress/recommended",
      "@vue/airbnb"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "vue": "never",
          "js": "never"
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "indent": [
        "error",
        2
      ],
      "arrow-parens": [
        2,
        "always"
      ],
      "no-tabs": 0,
      "max-len": 0,
      "vue/html-closing-bracket-newline": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "at-rule-whitelist": [
        "import",
        "media",
        "keyframes",
        "include",
        "if",
        "else"
      ],
      "at-rule-no-unknown": null,
      "color-named": "always-where-possible",
      "custom-media-pattern": "^([a-z]+-?)*([a-z]+)$",
      "custom-property-pattern": "^([a-z]+-?)*([a-z]+)$",
      "declaration-block-no-duplicate-properties": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "function-whitelist": [
        "color",
        "counter",
        "hsla",
        "rgba",
        "rotate",
        "translate",
        "translateY",
        "calc",
        "darken",
        "lighten",
        "map-merge",
        "theme-color",
        "url",
        "str-replace",
        "fade"
      ],
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "no-duplicate-selectors": true,
      "property-blacklist": [
        "float"
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "selector-class-pattern": "^([a-z]+((-{1,2}[a-z0-9]+)|(_{2}[a-z0-9]+))*)$",
      "selector-max-attribute": 1,
      "selector-max-id": [
        1,
        {
          "severity": "warning"
        }
      ],
      "selector-max-specificity": "3,5,0",
      "selector-max-type": 3,
      "selector-max-universal": 1,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-class-whitelist": [
        "hover",
        "focus",
        "global",
        "not",
        "after",
        "first-child",
        "last-child",
        "last-of-type",
        "active",
        "export",
        "checked",
        "indeterminate",
        "disabled"
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "export"
          ]
        }
      ],
      "string-quotes": "single",
      "unit-whitelist": [
        "%",
        "px",
        "em",
        "vh",
        "rem",
        "s",
        "deg"
      ],
      "value-no-vendor-prefix": true
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
